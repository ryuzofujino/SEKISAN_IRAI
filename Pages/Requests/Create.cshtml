    <div class="form-group">
        <label asp-for="RequestItem.ContractType"></label>
        <input asp-for="RequestItem.ContractType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RequestItem.ZacProjectNumber"></label>
        <input asp-for="RequestItem.ZacProjectNumber" class="form-control" />
