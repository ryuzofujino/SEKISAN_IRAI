@model SEKISAN_IRAI.Pages.Requests.CreateModel
@{
    ViewData["Title"] = "新規登録";
}

<h1>新規登録</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Request.Title"></label>
        <input asp-for="Request.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Request.Status"></label>
        <input asp-for="Request.Status" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">保存</button>
