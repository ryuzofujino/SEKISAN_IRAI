@page
@model SEKISAN_IRAI.Pages.Requests.IndexModel
@{
    ViewData["Title"] = "営業積算依頼一覧";
}

<h1>営業積算依頼一覧</h1>
<p>
    <a asp-page="Create">新規登録</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>案件名</th>
            <th>ステータス</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requests)
        {
            var rowClass = item.Status == "完了" || item.Status == "中止" ? "bg-secondary" : string.Empty;
            <tr class="@rowClass">
                <td>@item.ProjectName</td>
                <td>@item.Status</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id">編集</a> |
                    <a asp-page="Delete" asp-route-id="@item.Id">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>